{
  "name": "tmp-next",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --config tooling/eslint.config.mjs",
    "lint:fix": "eslint --config tooling/eslint.config.mjs --fix",
    "test": "vitest --config tooling/vitest.config.ts",
    "test:unit": "vitest run --config tooling/vitest.config.ts",
    "test:coverage": "vitest run --config tooling/vitest.config.ts --coverage",
    "test:integration": "vitest run --config tooling/vitest.integration.config.ts",
    "test:e2e": "playwright test --config tooling/playwright.config.ts",
    "test:integration:local": "bash scripts/with-integration-db.sh npm run test:integration",
    "test:e2e:local": "bash scripts/with-e2e-db.sh npm run test:e2e",
    "test:a11y": "bash scripts/run-a11y-ci.sh",
    "test:a11y:local": "pa11y-ci --config tooling/pa11yci.config.js",
    "test:all:local": "npm run test:unit && npm run test:integration:local && npm run test:e2e:local",
    "typecheck": "bash scripts/typecheck.sh",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "env:local": "bash scripts/dev-setup.sh --env-only",
    "env:preview": "bash scripts/env-preview.sh",
    "dev:setup": "bash scripts/dev-setup.sh",
    "dev:local": "npm run dev:setup && npm run dev",
    "dev:preview": "bash scripts/dev-preview.sh",
    "dev:preview:setup": "bash scripts/dev-preview-setup.sh",
    "postinstall": "bash scripts/postinstall.sh",
    "prepare": "husky",
    "clean": "rm -rf .next test-results"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@upstash/ratelimit": "^2.0.8",
    "@upstash/redis": "^1.36.1",
    "@vercel/analytics": "^1.6.1",
    "http-status-codes": "^2.3.0",
    "linkedom": "^0.18.12",
    "next": "^16.1.2",
    "next-auth": "^4.24.13",
    "pg": "^8.17.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sanitize-html": "^2.17.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.9",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/sanitize-html": "^2.16.0",
    "@vitest/coverage-v8": "^4.0.17",
    "autoprefixer": "^10.4.23",
    "eslint": "^9",
    "eslint-config-next": "^16.1.2",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "pa11y": "^9.0.1",
    "pa11y-ci": "^4.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.5.2",
    "prisma": "^7.2.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,css,json}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --config tooling/eslint.config.mjs --fix"
    ]
  }
}
