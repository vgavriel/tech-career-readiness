{
  "name": "tmp-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --config tooling/eslint.config.mjs",
    "test": "vitest --config tooling/vitest.config.ts",
    "test:run": "vitest run --config tooling/vitest.config.ts",
    "test:unit": "vitest run --config tooling/vitest.config.ts",
    "test:integration": "vitest run --config tooling/vitest.integration.config.ts",
