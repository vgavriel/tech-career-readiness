generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String           @id @default(cuid())
  email     String           @unique
  name      String?
  image     String?
  focusKey  String?
  isAdmin   Boolean          @default(false)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  progress  LessonProgress[]
  events    LessonProgressEvent[]
}

model Cohort {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  modules   Module[]
  lessons   Lesson[]
}

model Module {
  id          String   @id @default(cuid())
  key         String   @unique
  slug        String   @unique
  title       String
  order       Int
  description String?
  cohortId    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  cohort      Cohort?  @relation(fields: [cohortId], references: [id])
  lessons     Lesson[]
  slugAliases ModuleSlugAlias[]

  @@unique([cohortId, order])
}

model Lesson {
  id                 String            @id @default(cuid())
  key                String            @unique
  moduleId           String
  title              String
  slug               String            @unique
  order              Int
  publishedUrl       String
  estimatedMinutes   Int?
  objectivesMarkdown String?
  cohortId           String?
  isArchived         Boolean           @default(false)
  supersededByLessonId String?
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  module             Module            @relation(fields: [moduleId], references: [id])
  cohort             Cohort?           @relation(fields: [cohortId], references: [id])
  supersededBy       Lesson?           @relation("LessonSupersession", fields: [supersededByLessonId], references: [id])
  supersedes         Lesson[]          @relation("LessonSupersession")
  slugAliases        LessonSlugAlias[]
  progress           LessonProgress[]
  events             LessonProgressEvent[]

  @@unique([moduleId, order])
  @@index([supersededByLessonId])
}

model LessonSlugAlias {
  id        String   @id @default(cuid())
  lessonId  String
  slug      String   @unique
  createdAt DateTime @default(now())
  lesson    Lesson   @relation(fields: [lessonId], references: [id])
}

model ModuleSlugAlias {
  id        String   @id @default(cuid())
  moduleId  String
  slug      String   @unique
  createdAt DateTime @default(now())
  module    Module   @relation(fields: [moduleId], references: [id])
}

model LessonProgress {
  id          String   @id @default(cuid())
  userId      String
  lessonId    String
  completedAt DateTime?
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  lesson      Lesson   @relation(fields: [lessonId], references: [id])

  @@unique([userId, lessonId])
}

model LessonProgressEvent {
  id        String               @id @default(cuid())
  userId    String
  lessonId  String
  action    LessonProgressAction
  createdAt DateTime             @default(now())
  user      User                 @relation(fields: [userId], references: [id])
  lesson    Lesson               @relation(fields: [lessonId], references: [id])

  @@index([userId, createdAt])
  @@index([lessonId, createdAt])
}

enum LessonProgressAction {
  completed
  incomplete
}
