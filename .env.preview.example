# App environment (local, preview, production, test)
APP_ENV="preview"

# Neon Postgres connection string
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=verify-full"

# Auth.js (NextAuth)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="replace-with-random-secret"
GOOGLE_CLIENT_ID="replace-with-google-client-id"
GOOGLE_CLIENT_SECRET="replace-with-google-client-secret"

# Rate limiting (Upstash Redis)
UPSTASH_REDIS_REST_URL="https://example-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="replace-with-upstash-token"

# Optional request sizing
MAX_JSON_BODY_BYTES="16384"

# Optional base URL override for request origin checks
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
